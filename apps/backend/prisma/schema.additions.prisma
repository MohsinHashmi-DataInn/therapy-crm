// Additional model for client caregivers
model client_caregivers {
  id                 BigInt    @id @default(autoincrement())
  clientId           BigInt
  firstName          String
  lastName           String
  relationship       String
  isPrimary          Boolean   @default(false)
  phone              String?
  email              String?
  address            String?
  city               String?
  state              String?
  zipCode            String?
  hasLegalCustody    Boolean?  @default(false)
  isEmergencyContact Boolean?  @default(false)
  notes              String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now())
  createdBy          BigInt?
  updatedBy          BigInt?
  
  // Relations
  client             clients   @relation(fields: [clientId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_client_caregivers_client")
  createdByUser      users?    @relation("client_caregivers_created_byTousers", fields: [createdBy], references: [id], onDelete: SetNull, onUpdate: NoAction, map: "fk_client_caregivers_created_by")
  updatedByUser      users?    @relation("client_caregivers_updated_byTousers", fields: [updatedBy], references: [id], onDelete: SetNull, onUpdate: NoAction, map: "fk_client_caregivers_updated_by")
}
